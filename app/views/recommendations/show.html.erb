<h1>Recommendations#show</h1>
 <section id="recommendation"><%= image_tag image_path("/products/output-#{@recommendation.id}.png") %></section>  
<p>Message <%= @recommendation.message %> </p>
<p>Recommendation from <%= @sender.username %> </p>

<% @recommendation.comments.each do |comment| %>
  <p>Comment from: <%= comment.user.username %></p>
  <p><%= comment.comment %></p>
  <p><%= image_tag comment.style_image.url %></p>
<% end %>

<h1><%=link_to "Shop", @recommendation.product_url, target: '_blank'%></h1>





   



