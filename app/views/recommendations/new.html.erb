<div class="row">
  <div class="small-8 medium-6 large-5 small-centered columns">

    <div class="header panel">
      <div class="sign">
        <h1>New Recommendation</h1>
      </div>
      <%= form_for [@recommendation] do |f| %>
        <% if @recommendation.errors.any? %>
          <% for message in @recommendation.errors.full_messages %>
            <div class="alert alert-danger" role="alert">
              <%= message %>
            </div>
          <% end %>
        <% end %>

        <fieldset class="form-group">
          <%= f.label :message %>
          <%= f.text_area :message, class: "form-control" %>
        </fieldset>
        <fieldset class="form-group">
          <%= f.label :product_url %>
          <%= f.text_field :product_url, class: "form-control" %>
        </fieldset>
        <fieldset class="form-group">
          <%= f.label :receiver_username %>
          <%= text_field_tag :receiver_username %>
        </fieldset>
        <%= f.submit class: "btn btn-primary button secondary expand"%>
      <% end %>
    </div>
  </div>
</div>

<div class="loader-overlay">
  <div class="loader">
    <p class="loading-text">Creating recommendation...</p>
    <div class="sk-rotating-plane"></div>
  </div>
</div>
