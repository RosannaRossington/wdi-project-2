<div class="row">
  <div class="small-8 medium-6 large-5 small-centered columns">
    <div class="header panel">
      <div class="sign">
      <h1>Your page</h1>
      <p><%= @user.username %></p> 
      </div>
    </div>
  </div>
</div>

<div class="profile">

  <div class="row spacer">
    <div class= "medium-12 columns "><h1><%= @user.first_name %> <%= @user.last_name %></h1></div>
  </div>

  <div class="row spacer">
    <div class="medium-7 columns">Username: <%= @user.username %></div>
    <div class="medium-7 columns">Email: <%= @user.email %></div>
    <div class="medium-5 columns"><%= image_tag @user.profile_image.url %> </div>
  </div>

  <div class="row spacer" id="line-break">
    <div class= "medium-12 columns "></div>
  </div>

  <div class="row spacer">
    <div class="medium-12 columns"><h4><%= link_to "Inbox", inbox_path %></h4></div>
    <div class="medium-12 columns"><h4><%= link_to "Outbox", outbox_path %></h4> </div> 
  </div>

  <div class="row spacer">
  <div class="medium-12 columns"><h5><%= link_to "Edit Profile", edit_user_registration_path %></h5></div>
  </div>

</div>



