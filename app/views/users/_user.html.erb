
<!-- this adds Foundation Icon Fonts!! -->
    <link href="http://cdnjs.cloudflare.com/ajax/libs/foundicons/3.0.0/foundation-icons.css" rel="stylesheet">
    
    
      <div class="medium-4 columns">
        <div class="profile-card">
        <% if user.image? %>
        <img id="user_image" class="media-object" src="<%= user.image %>" alt="<%= user.username %>">
        <% else %>
        <img id="user_image" class="media-object" src="/images/default.jpg" alt="<%= user.username %>">
        <% end %>
          <div class="profile-info">
            <h4 class="subheader"><%= user.first_name %></h4>
            <h4 class="subheader"><%= user.last_name %></h4>
            <p><%= user.email %></p>
            <p><%= user.username %></p>
            <p>
               <b>Image:</b>
               <%= image_tag user.profile_image.url %>
             </p>
           <!--  <p><a href="http://foundation.zurb.com/forum">Forum</a> | <a href="http://zurb.com/ink/">Website</a></p> -->
            <ul class="inline-list">
              <li><a href="https://www.facebook.com/"><i class="fi-social-facebook"></i></a></li>
              <li><a href="https://twitter.com/"><i class="fi-social-twitter"></i></a></li>
              <li><a href="https://instagram.com/"><i class="fi-social-instagram"></i></a></li>
          </div>
        </div>
      </div>
    